{
  "name": "roko-pdf-reviewer",
  "version": "1.0.0",
  "description": "CLI tool for reviewing PDF exports from Figma and other design tools",
  "type": "module",
  "bin": {
    "pdf-review": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsup src/cli.ts --format esm --dts --clean",
    "start": "node dist/cli.js",
    "test": "vitest",
    "lint": "eslint src --ext ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^3.11.174",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "sharp": "^0.33.1",
    "canvas": "^2.11.2",
    "cli-table3": "^0.6.3",
    "figlet": "^1.7.0",
    "fuzzy": "^0.1.3",
    "open": "^10.0.3",
    "glob": "^10.3.10",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/inquirer": "^9.0.7",
    "@types/figlet": "^1.5.8",
    "@types/fs-extra": "^11.0.4",
    "typescript": "^5.3.3",
    "tsup": "^8.0.1",
    "tsx": "^4.6.2",
    "vitest": "^1.1.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "prettier": "^3.1.1"
  },
  "keywords": [
    "pdf",
    "figma",
    "design",
    "review",
    "cli",
    "tool"
  ],
  "author": "ROKO Network",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}