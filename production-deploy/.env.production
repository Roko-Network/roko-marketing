# Production Environment Variables for ROKO Marketing
# Copy this file and update with actual production values

# Deployment Configuration
NODE_ENV=production
VERSION=latest
DEPLOYMENT_ENV=production
PORT=8080

# Docker Configuration
COMPOSE_PROJECT_NAME=roko-marketing-prod
DOCKER_REGISTRY=registry.roko.network
IMAGE_TAG=production

# Traefik Configuration (if using Traefik)
ACME_EMAIL=admin@roko.network
TRAEFIK_DOMAIN=marketing.roko.network

# Resource Limits
MAX_MEMORY=1024M
MAX_CPU=2

# Logging
LOG_LEVEL=info
LOG_MAX_SIZE=50m
LOG_MAX_FILES=10

# Monitoring
ENABLE_MONITORING=true
METRICS_PORT=9114

# Security
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_SECOND=10
MAX_CONNECTIONS=100

# API Configuration (if needed)
API_ENDPOINT=https://api.roko.network
API_TIMEOUT=30000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_PWA=true
ENABLE_COMPRESSION=true

# Performance
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=8192
ENABLE_GZIP=true
ENABLE_CACHE=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30