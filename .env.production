# Production Environment Variables for ROKO Network Marketing Site
# These variables are automatically set during production builds

NODE_ENV=production
VITE_BUILD_TARGET=production
VITE_BUILD_ENV=production

# ROKO Network Production API
VITE_RPC_URL=https://rpc.roko.network
VITE_WS_URL=wss://ws.roko.network
VITE_API_BASE_URL=https://api.roko.network
VITE_API_TIMEOUT=10000

# Blockchain Configuration
VITE_CHAIN_ID=1337
VITE_NETWORK_NAME=ROKO Network
VITE_NETWORK_CURRENCY=ROKO
VITE_ETHERSCAN_API_KEY=YourEtherscanAPIKeyHere
VITE_ROKO_TOKEN_ADDRESS=0x6f222e04f6c53cc688ffb0abe7206aac66a8ff98

# Feature Flags - Production
VITE_ENABLE_WEB3=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=true
VITE_ENABLE_3D_FEATURES=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_LIVE_STATS=true

# Performance Configuration
VITE_CHUNK_SIZE_WARNING_LIMIT=500
VITE_ENABLE_BUNDLE_ANALYZER=false
VITE_ENABLE_CACHE=true
VITE_CACHE_TTL=3600

# CDN Configuration
VITE_CDN_URL=https://cdn.roko.network
VITE_ASSETS_URL=https://assets.roko.network

# Security Configuration
VITE_ENABLE_CSP=true
VITE_ENABLE_SECURITY_HEADERS=true
VITE_ALLOWED_ORIGINS=https://roko.network,https://www.roko.network

# Social Media Integration
VITE_TWITTER_HANDLE=@ROKONetwork
VITE_DISCORD_INVITE=https://discord.gg/roko
VITE_TELEGRAM_CHANNEL=https://t.me/rokonetwork
VITE_GITHUB_ORG=https://github.com/roko-network

# Contact Information
VITE_CONTACT_EMAIL=hello@roko.network
VITE_SUPPORT_EMAIL=support@roko.network

# Branding
VITE_BRAND_NAME=ROKO Network
VITE_BRAND_COLOR=#00d4aa
VITE_BRAND_LOGO=/logo.svg

# Production URLs
VITE_PUBLIC_URL=https://roko.network
DEPLOY_URL=https://roko.network