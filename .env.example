# ROKO Marketing Site Environment Variables
# Copy this file to .env.local for local development

# API Configuration
VITE_API_URL=https://api.roko.network
VITE_WS_URL=wss://ws.roko.network
VITE_API_TIMEOUT=10000

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=true
VITE_ENABLE_3D=true
VITE_ENABLE_LIVE_STATS=true

# Third-party Services
VITE_SENTRY_DSN=
VITE_GA_MEASUREMENT_ID=
VITE_HOTJAR_ID=

# Blockchain Services
VITE_ETHERSCAN_API_KEY=
VITE_ROKO_TOKEN_ADDRESS=0x6f222e04f6c53cc688ffb0abe7206aac66a8ff98

# Build Configuration
VITE_BUILD_ENV=development
VITE_PUBLIC_URL=http://localhost:5173

# Security
VITE_CSP_NONCE=
VITE_ALLOWED_ORIGINS=http://localhost:5173,https://roko.network

# Performance
VITE_ENABLE_CACHE=true
VITE_CACHE_TTL=3600

# White-label Configuration
VITE_BRAND_NAME=ROKO Network
VITE_BRAND_COLOR=#6366f1
VITE_BRAND_LOGO=/logo.svg